
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>User Dashboard</title>

    <link href="stylesheets/bootstrap.css" rel="stylesheet">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <link href="stylesheets/style.css" rel="stylesheet">
  </head>

  <body class="container">

  <header>
    <% include partials/header %>
  </header>

  <main>
    <div class="row">
      <div class="col-md-4">
        <% include partials/nav %>
      </div>
      <div class="col-md-8">
      <h1>View Billing</h1><br><br>
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>Name</th>
            </tr>
          </thead>
          <tbody>
            <% sensors.forEach(function(sensor) { %>
            <tr>
              <td>
                <form name="newuser" method="post" action="/viewbill">
                <input id="sensorName" type="text" name="sensorName" value="<%= sensor.sensorname %>" style="width: 200px;">
                <input id="delSensor" type="submit" value="View Bill" type="button" class="btn btn-primary">
                </form>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </main>

  <footer class="navbar-fixed-bottom">
    <% include partials/footer %>
  </footer>

  </body>
</html>
